{
    "name": "jedlik-json-backend-server",
    "version": "1.0.0",
    "description": "Jedlik Json-Backend-Server for exams",
    "main": "src/backend.ts",
    "type": "commonjs",
    "repository": {
        "private": false,
        "type": "git",
        "url": "https://github.com/nits68/JedlikJsonBackend_00_ingatlan"
    },
    "scripts": {
        "start": "node ./backend/backend.js",
        "compile": "tsc & copyfiles db_*.json backend/",
        "postinstall": "tsc & copyfiles db_*.json backend/",
        "kill": "taskkill /im node.exe /F",
        "test": "jest || ECHO.",
        "dev": "nodemon",
        "swagger": "node ./backend/swagger-gen.js"
    },
    "author": "Nits László",
    "license": "MIT",
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "morgan": "^1.10.1",
        "tslib": "^2.8.1",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/jest": "^30.0.0",
        "@types/morgan": "^1.9.10",
        "@types/node": "^22.5.2",
        "@types/swagger-ui-express": "^4.1.8",
        "@typescript-eslint/eslint-plugin": "^8.46.0",
        "@typescript-eslint/parser": "^8.46.0",
        "copyfiles": "^2.4.1",
        "eslint": "^9.37.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "jest": "^30.2.0",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "swagger-autogen": "^2.23.7",
        "ts-jest": "^29.4.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    },
    "jest": {
        "roots": [
            "<rootDir>/src"
        ],
        "preset": "ts-jest",
        "verbose": true,
        "testEnvironment": "node",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|js)$",
        "moduleFileExtensions": [
            "ts",
            "js",
            "json",
            "node"
        ],
        "collectCoverage": true,
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "src/**/*.{ts,js}",
            "!src/**/*.d.ts"
        ]
    }
}
